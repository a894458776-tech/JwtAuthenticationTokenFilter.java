<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kylin.kton.system.mapper.KtonIpStaticConfigPeriodMapper">
    
    <resultMap type="KtonIpStaticConfigPeriod" id="KtonIpStaticConfigPeriodResult">
        <result property="id"    column="id"    />
        <result property="ipType"    column="ip_type"    />
        <result property="merchantId"    column="merchant_id"    />
        <result property="days"    column="days"    />
        <result property="discount"    column="discount"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectKtonIpStaticConfigPeriodVo">
        select id, ip_type, merchant_id, days, discount, status, create_time, update_time from kton_ip_static_config_period
    </sql>

    <select id="selectKtonIpStaticConfigPeriodList" parameterType="KtonIpStaticConfigPeriod" resultMap="KtonIpStaticConfigPeriodResult">
        <include refid="selectKtonIpStaticConfigPeriodVo"/>
        <where>  
            <if test="ipType != null "> and ip_type = #{ipType}</if>
            <if test="merchantId != null "> and merchant_id = #{merchantId}</if>
            <if test="days != null "> and days = #{days}</if>
            <if test="discount != null "> and discount = #{discount}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectKtonIpStaticConfigPeriodById" parameterType="Long" resultMap="KtonIpStaticConfigPeriodResult">
        <include refid="selectKtonIpStaticConfigPeriodVo"/>
        where id = #{id}
    </select>

    <insert id="insertKtonIpStaticConfigPeriod" parameterType="KtonIpStaticConfigPeriod" useGeneratedKeys="true" keyProperty="id">
        insert into kton_ip_static_config_period
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ipType != null">ip_type,</if>
            <if test="merchantId != null">merchant_id,</if>
            <if test="days != null">days,</if>
            <if test="discount != null">discount,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ipType != null">#{ipType},</if>
            <if test="merchantId != null">#{merchantId},</if>
            <if test="days != null">#{days},</if>
            <if test="discount != null">#{discount},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateKtonIpStaticConfigPeriod" parameterType="KtonIpStaticConfigPeriod">
        update kton_ip_static_config_period
        <trim prefix="SET" suffixOverrides=",">
            <if test="ipType != null">ip_type = #{ipType},</if>
            <if test="merchantId != null">merchant_id = #{merchantId},</if>
            <if test="days != null">days = #{days},</if>
            <if test="discount != null">discount = #{discount},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKtonIpStaticConfigPeriodById" parameterType="Long">
        delete from kton_ip_static_config_period where id = #{id}
    </delete>

    <delete id="deleteKtonIpStaticConfigPeriodByIds" parameterType="String">
        delete from kton_ip_static_config_period where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>