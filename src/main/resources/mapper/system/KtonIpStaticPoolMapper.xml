<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kylin.kton.system.mapper.KtonIpStaticPoolMapper">
    
    <resultMap type="KtonIpStaticPool" id="KtonIpStaticPoolResult">
        <result property="id"    column="id"    />
        <result property="type"    column="type"    />
        <result property="continent"    column="continent"    />
        <result property="countryCode"    column="country_code"    />
        <result property="location"    column="location"    />
        <result property="hot"    column="hot"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectKtonIpStaticPoolVo">
        select id, type, continent, country_code, location, hot, status, create_time, update_time from kton_ip_static_pool
    </sql>

    <select id="selectKtonIpStaticPoolList" parameterType="KtonIpStaticPool" resultMap="KtonIpStaticPoolResult">
        <include refid="selectKtonIpStaticPoolVo"/>
        <where>  
            <if test="type != null "> and type = #{type}</if>
            <if test="continent != null  and continent != ''"> and continent = #{continent}</if>
            <if test="countryCode != null  and countryCode != ''"> and country_code = #{countryCode}</if>
            <if test="location != null  and location != ''"> and location = #{location}</if>
            <if test="hot != null  and hot != ''"> and hot = #{hot}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectKtonIpStaticPoolById" parameterType="Long" resultMap="KtonIpStaticPoolResult">
        <include refid="selectKtonIpStaticPoolVo"/>
        where id = #{id}
    </select>

    <insert id="insertKtonIpStaticPool" parameterType="KtonIpStaticPool" useGeneratedKeys="true" keyProperty="id">
        insert into kton_ip_static_pool
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="type != null">type,</if>
            <if test="continent != null and continent != ''">continent,</if>
            <if test="countryCode != null and countryCode != ''">country_code,</if>
            <if test="location != null and location != ''">location,</if>
            <if test="hot != null and hot != ''">hot,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="type != null">#{type},</if>
            <if test="continent != null and continent != ''">#{continent},</if>
            <if test="countryCode != null and countryCode != ''">#{countryCode},</if>
            <if test="location != null and location != ''">#{location},</if>
            <if test="hot != null and hot != ''">#{hot},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateKtonIpStaticPool" parameterType="KtonIpStaticPool">
        update kton_ip_static_pool
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null">type = #{type},</if>
            <if test="continent != null and continent != ''">continent = #{continent},</if>
            <if test="countryCode != null and countryCode != ''">country_code = #{countryCode},</if>
            <if test="location != null and location != ''">location = #{location},</if>
            <if test="hot != null and hot != ''">hot = #{hot},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKtonIpStaticPoolById" parameterType="Long">
        delete from kton_ip_static_pool where id = #{id}
    </delete>

    <delete id="deleteKtonIpStaticPoolByIds" parameterType="String">
        delete from kton_ip_static_pool where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>