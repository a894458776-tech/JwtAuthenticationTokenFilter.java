<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kylin.kton.system.mapper.KtonMerchantWalletMapper">
    
    <resultMap type="KtonMerchantWallet" id="KtonMerchantWalletResult">
        <result property="merchantId"    column="merchant_id"    />
        <result property="balance"    column="balance"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectKtonMerchantWalletVo">
        select merchant_id, balance, total_amount, create_time, update_time from kton_merchant_wallet
    </sql>

    <select id="selectKtonMerchantWalletList" parameterType="KtonMerchantWallet" resultMap="KtonMerchantWalletResult">
        <include refid="selectKtonMerchantWalletVo"/>
        <where>  
            <if test="balance != null "> and balance = #{balance}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
        </where>
    </select>
    
    <select id="selectKtonMerchantWalletByMerchantId" parameterType="Long" resultMap="KtonMerchantWalletResult">
        <include refid="selectKtonMerchantWalletVo"/>
        where merchant_id = #{merchantId}
    </select>

    <insert id="insertKtonMerchantWallet" parameterType="KtonMerchantWallet">
        insert into kton_merchant_wallet
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="merchantId != null">merchant_id,</if>
            <if test="balance != null">balance,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="merchantId != null">#{merchantId},</if>
            <if test="balance != null">#{balance},</if>
            <if test="totalAmount != null">#{totalAmount},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateKtonMerchantWallet" parameterType="KtonMerchantWallet">
        update kton_merchant_wallet
        <trim prefix="SET" suffixOverrides=",">
            <if test="balance != null">balance = #{balance},</if>
            <if test="totalAmount != null">total_amount = #{totalAmount},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where merchant_id = #{merchantId}
    </update>

    <delete id="deleteKtonMerchantWalletByMerchantId" parameterType="Long">
        delete from kton_merchant_wallet where merchant_id = #{merchantId}
    </delete>

    <delete id="deleteKtonMerchantWalletByMerchantIds" parameterType="String">
        delete from kton_merchant_wallet where merchant_id in 
        <foreach item="merchantId" collection="array" open="(" separator="," close=")">
            #{merchantId}
        </foreach>
    </delete>
</mapper>