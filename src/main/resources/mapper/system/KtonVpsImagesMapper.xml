<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kylin.kton.system.mapper.KtonVpsImagesMapper">
    
    <resultMap type="KtonVpsImages" id="KtonVpsImagesResult">
        <result property="id"    column="id"    />
        <result property="refId"    column="ref_id"    />
        <result property="imageType"    column="image_type"    />
        <result property="merchantId"    column="merchant_id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="imageVersion"    column="image_version"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectKtonVpsImagesVo">
        select id, ref_id, image_type, merchant_id, name, description, image_url, image_version, status, create_time, update_time from kton_vps_images
    </sql>

    <select id="selectKtonVpsImagesList" parameterType="KtonVpsImages" resultMap="KtonVpsImagesResult">
        <include refid="selectKtonVpsImagesVo"/>
        <where>  
            <if test="refId != null  and refId != ''"> and ref_id = #{refId}</if>
            <if test="imageType != null  and imageType != ''"> and image_type = #{imageType}</if>
            <if test="merchantId != null "> and merchant_id = #{merchantId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
            <if test="imageVersion != null  and imageVersion != ''"> and image_version = #{imageVersion}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectKtonVpsImagesById" parameterType="Long" resultMap="KtonVpsImagesResult">
        <include refid="selectKtonVpsImagesVo"/>
        where id = #{id}
    </select>

    <insert id="insertKtonVpsImages" parameterType="KtonVpsImages" useGeneratedKeys="true" keyProperty="id">
        insert into kton_vps_images
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="refId != null">ref_id,</if>
            <if test="imageType != null and imageType != ''">image_type,</if>
            <if test="merchantId != null">merchant_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
            <if test="imageVersion != null and imageVersion != ''">image_version,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="refId != null">#{refId},</if>
            <if test="imageType != null and imageType != ''">#{imageType},</if>
            <if test="merchantId != null">#{merchantId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
            <if test="imageVersion != null and imageVersion != ''">#{imageVersion},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateKtonVpsImages" parameterType="KtonVpsImages">
        update kton_vps_images
        <trim prefix="SET" suffixOverrides=",">
            <if test="refId != null">ref_id = #{refId},</if>
            <if test="imageType != null and imageType != ''">image_type = #{imageType},</if>
            <if test="merchantId != null">merchant_id = #{merchantId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
            <if test="imageVersion != null and imageVersion != ''">image_version = #{imageVersion},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKtonVpsImagesById" parameterType="Long">
        delete from kton_vps_images where id = #{id}
    </delete>

    <delete id="deleteKtonVpsImagesByIds" parameterType="String">
        delete from kton_vps_images where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>