<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kylin.kton.system.mapper.KtonVpsIpPoolMapper">
    
    <resultMap type="KtonVpsIpPool" id="KtonVpsIpPoolResult">
        <result property="id"    column="id"    />
        <result property="clusterId"    column="cluster_id"    />
        <result property="hostId"    column="host_id"    />
        <result property="merchantId"    column="merchant_id"    />
        <result property="ip"    column="ip"    />
        <result property="containerIp"    column="container_ip"    />
        <result property="ipType"    column="ip_type"    />
        <result property="countAssign"    column="count_assign"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectKtonVpsIpPoolVo">
        select id, cluster_id, host_id, merchant_id, ip, container_ip, ip_type, count_assign, status, create_time, update_time from kton_vps_ip_pool
    </sql>

    <select id="selectKtonVpsIpPoolList" parameterType="KtonVpsIpPool" resultMap="KtonVpsIpPoolResult">
        <include refid="selectKtonVpsIpPoolVo"/>
        <where>  
            <if test="clusterId != null "> and cluster_id = #{clusterId}</if>
            <if test="hostId != null "> and host_id = #{hostId}</if>
            <if test="merchantId != null "> and merchant_id = #{merchantId}</if>
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="containerIp != null  and containerIp != ''"> and container_ip = #{containerIp}</if>
            <if test="ipType != null  and ipType != ''"> and ip_type = #{ipType}</if>
            <if test="countAssign != null "> and count_assign = #{countAssign}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectKtonVpsIpPoolById" parameterType="Long" resultMap="KtonVpsIpPoolResult">
        <include refid="selectKtonVpsIpPoolVo"/>
        where id = #{id}
    </select>

    <insert id="insertKtonVpsIpPool" parameterType="KtonVpsIpPool" useGeneratedKeys="true" keyProperty="id">
        insert into kton_vps_ip_pool
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="clusterId != null">cluster_id,</if>
            <if test="hostId != null">host_id,</if>
            <if test="merchantId != null">merchant_id,</if>
            <if test="ip != null and ip != ''">ip,</if>
            <if test="containerIp != null and containerIp != ''">container_ip,</if>
            <if test="ipType != null and ipType != ''">ip_type,</if>
            <if test="countAssign != null">count_assign,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="clusterId != null">#{clusterId},</if>
            <if test="hostId != null">#{hostId},</if>
            <if test="merchantId != null">#{merchantId},</if>
            <if test="ip != null and ip != ''">#{ip},</if>
            <if test="containerIp != null and containerIp != ''">#{containerIp},</if>
            <if test="ipType != null and ipType != ''">#{ipType},</if>
            <if test="countAssign != null">#{countAssign},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateKtonVpsIpPool" parameterType="KtonVpsIpPool">
        update kton_vps_ip_pool
        <trim prefix="SET" suffixOverrides=",">
            <if test="clusterId != null">cluster_id = #{clusterId},</if>
            <if test="hostId != null">host_id = #{hostId},</if>
            <if test="merchantId != null">merchant_id = #{merchantId},</if>
            <if test="ip != null and ip != ''">ip = #{ip},</if>
            <if test="containerIp != null and containerIp != ''">container_ip = #{containerIp},</if>
            <if test="ipType != null and ipType != ''">ip_type = #{ipType},</if>
            <if test="countAssign != null">count_assign = #{countAssign},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKtonVpsIpPoolById" parameterType="Long">
        delete from kton_vps_ip_pool where id = #{id}
    </delete>

    <delete id="deleteKtonVpsIpPoolByIds" parameterType="String">
        delete from kton_vps_ip_pool where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>